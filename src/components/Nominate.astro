---
import KvBanner from './KvBanner.astro';
---

<section id="nominate" class="pt-0">
  <KvBanner color="blue" title="Submit Nomination" subtitle="Complete your nomination through the online form." />
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-6 overlap-wrap pb-16">
      <div class="grid gap-6">
        <div class="p-6 rounded-2xl bg-white border border-gray-200 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h3 class="font-semibold mb-2">Ready to submit?</h3>
            <p class="text-sm text-gray-700">Open the online form and complete your nomination in English with the required materials.</p>
          </div>
          <a href="https://docs.google.com/forms/d/e/1FAIpQLSfJrynzDcMfCxNDiRCGtn7YQdfbxbqsH7OKvga_kTT__bykhA/viewform" target="_blank" rel="noopener" class="mt-2 md:mt-0 inline-flex items-center justify-center bg-brand-blue text-white px-6 py-3 rounded-lg hover:bg-brand-blueDark">Open Nomination Form</a>
        </div>
      </div>
    </div>
  </div>
</section>
