---
import KvBanner from './KvBanner.astro';
---

<section id="judges" class="pt-0">
  <KvBanner color="sand" title="Meet the Patron & Judges" />
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-6 overlap-wrap pb-16">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Patron: Madam Halimah Yacob -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/Madam Halimah Yacob.jpg" alt="Madam Halimah Yacob" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">Madam Halimah Yacob</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-sand text-white">Patron</span>
              </div>
              <p class="text-sm text-gray-700">Former President of Singapore; Chancellor, Singapore University of Social Sciences</p>
            </div>
          </div>
        </div>

        <!-- Judge: HRH Tunku Tun Aminah -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/Tunku Tun Aminah.jpg" alt="HRH Tunku Tun Aminah" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">HRH Tunku Tun Aminah</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-blue text-white">Judge</span>
              </div>
              <p class="text-sm text-gray-700">Non-Independent Non-Executive Chairman, Berjaya Corporation Berhad</p>
            </div>
          </div>
        </div>

        <!-- Judge: Ms Retno L.P. Marsudi -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/Ibu Retno.jpg" alt="Ms Retno L.P. Marsudi" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">Ms Retno L.P. Marsudi</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-blue text-white">Judge</span>
              </div>
              <p class="text-sm text-gray-700">Former Minister of Foreign Affairs, Indonesia</p>
            </div>
          </div>
        </div>

        <!-- Judge: Mayor Joy Belmonte -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/Mayor Joy.jpg" alt="Mayor Joy Belmonte" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">Mayor Joy Belmonte</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-blue text-white">Judge</span>
              </div>
              <p class="text-sm text-gray-700">Mayor of Quezon City, Philippines</p>
            </div>
          </div>
        </div>

        <!-- Judge: Mr Panote Sirivadhanabhakdi -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/5. Khun Panote.jpg" alt="Mr Panote Sirivadhanabhakdi" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">Mr Panote Sirivadhanabhakdi</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-blue text-white">Judge</span>
              </div>
              <p class="text-sm text-gray-700">Group CEO, Frasers Property Limited</p>
            </div>
          </div>
        </div>

        <!-- Judge: Mr Ng Boon Heong -->
        <div class="colorful-card p-6 group">
          <div class="flex flex-col gap-4">
            <div class="w-40 md:w-44 lg:w-48 [aspect-ratio:7/10] overflow-hidden rounded-2xl mx-auto">
              <img src="/assets/profile/boong.jpg" alt="Mr Ng Boon Heong" class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110" width="280" height="400" loading="lazy" decoding="async" />
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center gap-2 mb-2">
                <h3 class="font-semibold">Mr Ng Boon Heong</h3>
                <span class="text-[11px] leading-none px-2 py-1 rounded-full bg-brand-blue text-white">Judge</span>
              </div>
              <p class="text-sm text-gray-700">Executive Director & CEO, Temasek Foundation</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
