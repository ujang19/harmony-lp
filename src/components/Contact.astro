---
import KvBanner from './KvBanner.astro';
---

<!-- Contact -->
<section id="contact" class="pt-0">
  <KvBanner color="orange" title="Contact" subtitle="Get in touch with our team for questions and inquiries." />
  
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 lg:px-6 overlap-wrap pb-16">
      <div class="grid md:grid-cols-2 gap-6">
        
        <!-- Left Column -->
        <div class="space-y-6">
          <!-- Contact: Mr James Chan -->
          <div class="p-6 rounded-2xl bg-white border border-gray-200">
            <div class="text-xs font-semibold text-brand-orange mb-2">TEMASEK FOUNDATION</div>
            <address class="not-italic text-sm leading-relaxed">
              <div class="text-base font-semibold mb-3">Mr James Chan</div>
              <div class="mb-2"><a href="mailto:jameschan@temasekfoundation.org.sg" class="text-brand-blue hover:text-brand-blueDark">jameschan@temasekfoundation.org.sg</a></div>
            </address>
          </div>

          <!-- Contact: Ms Zhuang Jielin -->
          <div class="p-6 rounded-2xl bg-white border border-gray-200">
            <div class="text-xs font-semibold text-brand-orange mb-2">TEMASEK FOUNDATION</div>
            <address class="not-italic text-sm leading-relaxed">
              <div class="text-base font-semibold mb-3">Ms Zhuang Jielin</div>
              <div class="mb-2"><a href="mailto:jielin@temasekfoundation.org.sg" class="text-brand-blue hover:text-brand-blueDark">jielin@temasekfoundation.org.sg</a></div>
            </address>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-6">
          <!-- Contact: Mr Mitra -->
          <div class="p-6 rounded-2xl bg-white border border-gray-200">
            <div class="text-xs font-semibold text-brand-orange mb-2">5P GLOBAL MOVEMENT</div>
            <address class="not-italic text-sm leading-relaxed">
              <div class="text-base font-semibold mb-3">Mr Mitra</div>
              <div class="mb-2"><a href="mailto:secretariat@5pglobal.org" class="text-brand-blue hover:text-brand-blueDark">secretariat@5pglobal.org</a></div>
            </address>
          </div>

          <!-- Contact: Mr D. S. Pamungkas -->
          <div class="p-6 rounded-2xl bg-white border border-gray-200">
            <div class="text-xs font-semibold text-brand-orange mb-2">5P GLOBAL MOVEMENT</div>
            <address class="not-italic text-sm leading-relaxed">
              <div class="text-base font-semibold mb-3">Mr D. S. Pamungkas</div>
              <div class="mb-2"><a href="mailto:secretariat@5pglobal.org" class="text-brand-blue hover:text-brand-blueDark">secretariat@5pglobal.org</a></div>
            </address>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
