---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Celebrates from '../components/Celebrates.astro';
import Eligibility from '../components/Eligibility.astro';
import RaiseAccordion from '../components/RaiseAccordion.astro';
import Participate from '../components/Participate.astro';
import Nominate from '../components/Nominate.astro';
import AwardRecognition from '../components/AwardRecognition.astro';
import Judges from '../components/Judges.astro';
import Trophy from '../components/Trophy.astro';
import Partners from '../components/Partners.astro';
import Contact from '../components/Contact.astro';
import Gallery from '../components/Gallery.astro';
import Faq from '../components/Faq.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Harmony in Diversity Award | Submit Nomination</title>
    <meta name="description" content="Recognising individuals who foster social cohesion across Southeast Asia. Nominations Aug–Dec 2025. English-only submissions. Prize: USD 20,000 + Trophy."/>
    <meta property="og:title" content="Harmony in Diversity Award | Submit Nomination"/>
    <meta property="og:description" content="Celebrate champions of social cohesion in Southeast Asia. Organisations submit English-language nominations (Aug–Dec 2025). Award includes USD 20,000, trophy, and visibility through ceremony and curated sharing opportunities."/>
    <meta property="og:type" content="website"/>
  <link rel="canonical" href="https://harmonyindiversityaward.com/" />
  <meta property="og:url" content="https://harmonyindiversityaward.com/" />
    <meta name="twitter:card" content="summary_large_image"/>
    <link rel="stylesheet" href="/brand.css" />
  <!-- Favicon -->
    <link rel="icon" href="/assets/favicon.ico" sizes="any" />
    <link rel="shortcut icon" href="/assets/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="192x192" href="/assets/android-chrome-192x192.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="/assets/android-chrome-512x512.png" />
  <meta name="theme-color" content="#4d91c6" />
  <!-- GSAP Core + ScrollTrigger -->
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.13/dist/gsap.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.13/dist/ScrollTrigger.min.js" defer></script>
  <!-- Lenis smooth scroll (CDN) -->
  <script src="https://cdn.jsdelivr.net/npm/@studio-freight/lenis@1.0.42/dist/lenis.min.js" defer></script>
  <!-- GSAP animations init -->
  <script src="/gsap-init.js" defer></script>
  </head>
  <body class="font-sans text-brand-ink">
    <Header />
    <Hero />
    <About />
    <Celebrates />
    <Eligibility />
    <RaiseAccordion />
    <Participate />
  <Nominate />
    <AwardRecognition />
    <Judges />
    <Trophy />
    <Partners />
    <Contact />
    <Gallery />
    <Faq />
    <Footer />
  </body>
</html>